@model IEnumerable<Product>

@{
    ViewData["Title"] = "Category Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var categories = ViewBag.Categories as List<FootFetish.Models.Category>;
}

<h2>@ViewBag.CategoryName</h2>

@if (Model != null && Model.Any())
{
    <h4>Products in this category:</h4>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text"><strong>Price:</strong> BGN @product.Price</p>
                        <a href="@Url.Action("Details", "Products", new { id = product.ProductId })" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No products found in this category.</p>
}